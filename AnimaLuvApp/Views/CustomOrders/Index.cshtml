@model IEnumerable<AnimaLuvApp.Models.CustomOrder>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Customer
        </th>
        <th>
            Date Ordered
        </th>
        <th>
            View Order
        </th>
        <th>Make Changes</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.CustomOrderID })
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustomOrderID }) |
            
            @Html.ActionLink("Delete", "Delete", new { id=item.CustomOrderID })
        </td>
    </tr>
}

</table>
